<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginTop="5dp"
              android:layout_height="wrap_content"
              android:paddingBottom="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_message_user"
            android:src="@drawable/ic_1"
            android:background="@drawable/ic_1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_message"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:text="Text Message Text Message Text MessageText MessageText MessageText MessageText MessageText MessageText MessageText MessageText MessageText Message"
                android:layout_width="wrap_content"
                android:background="@drawable/background_left"
                android:padding="10dp"
                android:maxWidth="300dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/imageView_message_image"
                android:layout_marginTop="3dp"
                android:layout_gravity="start"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/png_image_default"
                android:paddingStart="10dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"/>
    </LinearLayout>

    <TextView
            android:visibility="gone"
            android:id="@+id/tv_time"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>