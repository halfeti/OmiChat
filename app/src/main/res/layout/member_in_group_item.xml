<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_marginTop="10dp"
              android:id="@+id/member_ingroup_item"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_margin="3dp"
              android:layout_height="80dp">
    <FrameLayout android:layout_width="0dp"
                 android:layout_weight="0.7"
                 android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:id="@+id/iv_image_member_ingroup"
                android:src="@drawable/ic_1"
                android:background="@drawable/ic_1"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="10dp"
                app:civ_border_width="8dp"
                app:civ_border_color="#05df29"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/onl"
                android:visibility="gone"
                android:layout_gravity="bottom|right"
                android:layout_height="10dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="10dp"
                app:civ_border_width="8dp"
                android:visibility="gone"
                app:civ_border_color="#bfbfbf"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/off"
                android:layout_gravity="bottom|right"
                android:layout_height="10dp"/>
    </FrameLayout>

    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="2.5"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:orientation="vertical">
        <TextView
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="User Name"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_member_ingroup"
                android:textStyle="bold"
                android:textSize="20dp"/>
        <TextView
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Thành viên"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/tv_role_ingroup"/>
    </LinearLayout>

</LinearLayout>
